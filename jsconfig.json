{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "checkJs": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src"]
}
